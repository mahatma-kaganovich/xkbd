<global>

# font name, for an xft font, specify the point size after a '-'
# default font is Monospace (calibrated)
#font verdana-12|fixed
#font sans-26|fixed

# color of keboard background ( default white )
col  0:0:0

# color of an active key ( default black )
down_col  0:63:63

# color of key text ( default black )
txt_col 63:127:127

# color of key borders ( default black )
border_col 31:63:63

# color of non-chars
grey_col 0:31:31

# color of keypad
kp_col 0:31:31

# max keyboard dimentions, mm
width  340
height 120

# button style, can be rounded ( default ), square or plain
# button_style plain
#repeat_delay 50
# 0 disable repeat (powersave), -1 - delay & time from X
repeat_time 0

def_width 7
kp_width 6

</global>

#
# The keyboard definition is split into rows, starting from the top.
#
# options for each key are;
# 
#  default
#  shift
#  mod
#  default_ks
#  shift_ks
#  mod_ks
#  img
#  bg
#  fg
#  slide_up_ks
#  slide_down_ks
#  slide_left_ks
#  slide_right_ks
#  width
#  height

<layout>
<row>
	<key>
		default Esc
		default_ks Escape
	</key>
	<key>
		default_ks F1
	</key>
	<key>
		default_ks F2
	</key>
	<key>
		default_ks F3
	</key>
	<key>
		default_ks F4
	</key>
	<key>
		default_ks F5
	</key>
	<key>
		default_ks F6
	</key>
	<key>
		default_ks F7
	</key>
	<key>
		default_ks F8
	</key>
	<key>
		default_ks F9
	</key>
	<key>
		default_ks F10
	</key>
	<key>
		default_ks F11
	</key>
	<key>
		default_ks F12
	</key>
	<key>
		default_ks Print
	</key>
	<key>
		default SclLk
		default_ks Scroll_Lock
	</key>
	<key>
		default_ks Pause
	</key>
	<key>
		default NumLk
		default_ks Num_Lock
	</key>
	<key>
		default -
